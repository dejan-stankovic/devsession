{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "rootDirs": [".", "../frontend/src"]
  },
  "include": [
    "src/**/*",
    "../frontend/src/types/**/*",
    "../frontend/src/utils/**/*"
  ]
}