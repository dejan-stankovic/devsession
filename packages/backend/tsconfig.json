{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "lib",
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "rootDirs": ["."],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ]
}